<h1>Mail template</h1>

<table class='table'>
  <thead>
    <th>Name</th>
    <th>Subject</th>
    
    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @mail_templates.each do |mail_template| %>
      <tr>
        <td><%= mail_template.name %></td>
        <td><%= mail_template.subject %></td>
      
        <td><%= link_to "Show", mail_template_path(mail_template) %></td>
        <td><%= link_to "Edit", edit_mail_template_path(mail_template) %></td>
        <td>
          <%= link_to "Delete", mail_template_path(mail_template),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New mail template", new_mail_template_path %>